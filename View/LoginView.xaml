                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Name="Land1Name"
                                               FontSize="18"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" >
                                        Land 1
                                    </TextBlock>
                                    <TextBlock Grid.Row="1"
